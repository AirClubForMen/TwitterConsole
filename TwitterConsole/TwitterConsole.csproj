<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="linqtotwitter" Version="6.15.0" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="TwitterConsoleSettings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>TwitterConsoleSettings.settings</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Update="TwitterConsoleSettings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>TwitterConsoleSettings.Designer.cs</LastGenOutput>
    </None>
  </ItemGroup>

</Project>
